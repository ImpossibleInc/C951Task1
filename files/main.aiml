    <category>
        <pattern>START OVER</pattern>
        <template>
            <think><set name = "topic">0</set></think>
            <srai>begin</srai>
            </template>
    </category>
    
    <category>
        <pattern> * </pattern>
        <template>
            I dont understand "<star />". Please answer by pressing one of the buttons or typing the answer. If you forgot the question type "repeat".
        </template>
    </category>
        
    <category>
        <pattern>^ REPEAT ^</pattern>
        <template><response index = "2" /></template>
    </category>    
</aiml>